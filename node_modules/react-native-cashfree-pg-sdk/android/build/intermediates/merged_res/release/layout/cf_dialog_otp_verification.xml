<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/cf_bg_bottom_sheet">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:paddingBottom="20dp">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_cf_enter_otp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/cf_otp_for_text"
                android:textColor="@color/cf_black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                app:layout_constraintBottom_toBottomOf="@id/tv_cf_enter_otp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_cf_enter_otp"
                app:srcCompat="@drawable/cf_cancel_icon" />

            <com.cashfree.pg.core.api.view.CFNetworkImageView
                android:id="@+id/iv_bank_logo"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/cf_ic_bank_placeholder"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_cf_enter_otp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_bank_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/iv_bank_logo"
                app:layout_constraintStart_toEndOf="@id/iv_bank_logo"
                app:layout_constraintTop_toTopOf="@id/iv_bank_logo"
                tools:text="Bank name" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/cf_otp_message"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_bank_logo" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_otp_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_message">

                <androidx.constraintlayout.widget.Group
                    android:id="@+id/group_otp_enter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    app:constraint_referenced_ids="til_otp,tv_resend, btn_submit"
                    tools:visibility="visible" />

                <androidx.constraintlayout.widget.Group
                    android:id="@+id/group_otp_auto_submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:constraint_referenced_ids="card_view_auto_submit"
                    tools:visibility="visible" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_view_auto_submit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeColor="@color/cf_card_border_color"
                    app:strokeWidth="1dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="16dp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/cv_submit_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cf_auto_submit_message"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:id="@+id/cv_timer_progress"
                            android:layout_width="160dp"
                            android:layout_height="3dp"
                            android:layout_marginTop="16dp"
                            android:indeterminate="true"
                            app:indeterminateAnimationType="contiguous"
                            app:indicatorColor="@array/progress_color"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/cv_submit_title"
                            app:trackThickness="3dp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/cv_submitting_in"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/submit_otp_in"
                            android:textSize="14sp"
                            android:layout_marginTop="12dp"
                            app:layout_constraintStart_toStartOf="@id/cv_timer_progress"
                            app:layout_constraintTop_toBottomOf="@id/cv_timer_progress" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/cv_dismiss_timer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:layout_marginStart="6dp"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toEndOf="@id/cv_submitting_in"
                            app:layout_constraintTop_toBottomOf="@id/cv_timer_progress"
                            tools:text="00:00" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/cv_cancel_auto_submit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cf_cancel_auto_submit"
                            android:textColor="@color/cf_cancel_red"
                            android:textSize="16sp"
                            android:layout_marginTop="12dp"
                            app:layout_constraintStart_toStartOf="@id/cv_timer_progress"
                            app:layout_constraintEnd_toEndOf="@id/cv_timer_progress"
                            app:layout_constraintTop_toBottomOf="@+id/cv_dismiss_timer"/>

                        <androidx.constraintlayout.widget.Group
                            android:id="@+id/group_otp_auto_submit_timer_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="visible"
                            app:constraint_referenced_ids="cv_cancel_auto_submit,cv_dismiss_timer, cv_submitting_in"
                            tools:visibility="visible" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_otp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:endIconMode="clear_text"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tie_otp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/cf_enter_otp"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:maxLength="6"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textSize="12sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_resend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/cf_resent_otp"
                    android:textColor="@color/color_cta"
                    app:layout_constraintEnd_toEndOf="@+id/til_otp"
                    app:layout_constraintTop_toBottomOf="@+id/til_otp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_submit"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="32dp"
                    android:text="@string/cf_pay_proceed"
                    android:textAllCaps="false"
                    android:theme="@style/CFCoreUPIStyle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/til_otp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.Group
                android:id="@+id/group_bank_redirection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:constraint_referenced_ids="tv_bank_redirection_info,tv_bank_redirection_text"
                tools:visibility="visible" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_bank_redirection_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="28dp"
                android:gravity="center_horizontal"
                android:text="@string/bank_redirection_info"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cl_otp_view" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_bank_redirection_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/bank_redirection_text"
                android:textSize="14sp"
                app:drawableEndCompat="@drawable/cf_forward_arrow"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_bank_redirection_info" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_cf_secured"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:drawablePadding="8dp"
                android:text="@string/cf_secured"
                android:textSize="12sp"
                app:drawableEndCompat="@drawable/cf_name_with_logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_bank_redirection_text" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/cf_loader"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#30000000"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone"
            tools:visibility="visible">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:alpha="0.2"
                app:cardBackgroundColor="#000000"
                app:cardElevation="0dp"
                app:strokeColor="@android:color/transparent" />

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:layout_margin="24dp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_cf_logo" />

        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>